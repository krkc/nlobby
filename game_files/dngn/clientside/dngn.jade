extends ../../../views/game

block gameIncludes
  script(data-main='dngnmain', src='lib/requirejs/require.js')
  script(src='javascript/NgRoom.js')
  link(rel='stylesheet', href='dngn.css')
block gameContent
  h2.page-header(style="text-align: center;")
    | Crawl the dungeon!
  h4.page-header(style="text-align: center;")
    | (Game is not yet functional. Only meant to show multiple game modules installed)
  div.container
  div#scoreboard.container
    div.row
      div.col-xs-3
        | Score: 
      div.col-xs-6
        | Opponent Score: 
      div.col-xs-3
        button#resetBtn.btn.btn-default.btn-xs
          a(href="#") Reset
    div.row
      div.col-xs-3
        span#myscorespan.badge 0
      div.col-xs-6
        span#oppscorespan.badge 0
    p
  div(style="clear: both;")
  div#canvWrapper(style="margin-left: 4%; width: 90%; height: 83%; float: left")
    canvas#canvbg(style="border: 1px solid #000000; position: absolute; z-index: 0")
    canvas#canvfg(style="border: 1px solid #000000; position: absolute; z-index: 1")
  div(style='clear: both; width: 100%;')
